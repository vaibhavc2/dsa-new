{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/a",
            // "program": "${fileDirname}\\${fileBasenameNoExtension}",
            // "program": "${fileDirname}\\a",
            // "args": [
            //     "<${fileDirname}//INPUT.txt",
            //     ">${fileDirname}//OUTPUT.txt"
            // ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                // {
                //     "description": "Enable pretty-printing for gdb",
                //     "text": "python3 import sys;sys.path.insert(0, '/usr/share/gcc/python/libstdcxx');from libstdcxx.v6.printers import register_libstdcxx_printers;register_libstdcxx_printers(None)",
                //     "ignoreFailures": false
                // },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable information of registers",
                    "text": "-exec info registers",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file"
        }
    ]
}